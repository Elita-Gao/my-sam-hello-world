[flake8]
# 1. Expand the line length to a modern standard
max-line-length = 170

# 2. Exclude folders we don't control or that contain generated code
#    .git: version control internals
#    __pycache__: compiled python files
#    .venv: your installed libraries (NEVER lint these!)
#    .aws-sam: artifacts generated by the SAM build process
exclude =
    .git,
    __pycache__,
    .venv,
    .aws-sam,
    build,
    dist

# 3. Ignore specific errors that conflict with modern practices
#    E203: Whitespace before ':' (conflicts with Black formatter)
#    W503: Line break before binary operator (an outdated rule)
extend-ignore = E203, W503, E122, E265
